<Window x:Class="LIMP.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIMP.UI"
        mc:Ignorable="d"
        Title="LIMP" Height="450" Width="800">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Menu DockPanel.Dock="Top" Height="25" VerticalAlignment="Top"  >
            <MenuItem Name="menuItemFile" Header="_File">
                <MenuItem Header="_Open" Click="MenuItem_Click"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="Save _As..."/>
                <Separator/>
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem  Header="_About"/>
            </MenuItem>
        </Menu>
        <Grid Name="gridStatus" DockPanel.Dock="Bottom" Height="30" >
            <Border BorderBrush="Black" BorderThickness="0.5"/>
            <Label HorizontalAlignment="Left" VerticalAlignment="Center">Status here</Label>
        </Grid>
        <Grid Name="gridControls" DockPanel.Dock="Right" Width="100" >
            <Border BorderBrush="Black" BorderThickness="0.5"/>
            <Slider Name="sliderRotate" Orientation="Vertical" 
                    Width="80" Minimum="-180" Maximum="180" TickFrequency="90" Value="0" 
                    TickPlacement="Both"
                    AutoToolTipPlacement="BottomRight"
                    AutoToolTipPrecision="1"
                    Margin="0 15 0 15"
                    Interval="90" ValueChanged="sliderRotate_ValueChanged" >
            </Slider>
        </Grid>
        <Grid Name="gridImage" >
            <Border BorderBrush="Black" BorderThickness="0.5"/>
            <Viewbox>
            <Image Name="imgMain" Stretch="Uniform"  Source="c:\users\rich\desktop\aogg.gif" RenderTransformOrigin="0.5,0.5">
               
                <Image.LayoutTransform>
                    <RotateTransform Angle="{Binding ElementName=sliderRotate, Path=Value}"/>
                </Image.LayoutTransform>
            </Image>
            <!--<Label HorizontalAlignment="Center" VerticalAlignment="Center">Image here</Label>-->
            </Viewbox>
        </Grid>
    </DockPanel>
</Window>
